<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.maico.maicam.GalleryFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <com.project.maico.maicam.CircleImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/default_picture"
            android:id="@+id/profilePicture"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:id="@+id/profileLayout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role: COA Auditor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"
                android:id="@+id/profileRole"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonEditProfile"

                android:id="@+id/buttonEditprofile"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jaimelyn maico"
        android:id="@+id/profileName"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingBottom="12dp" />

    <View style="@style/Divider"
        android:paddingBottom="16dp"/>

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gridView"
        android:horizontalSpacing="@dimen/image_thumbnail_spacing"
        android:verticalSpacing="@dimen/image_thumbnail_spacing"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/image_thumbnail_size"
        android:stretchMode="columnWidth"
        android:gravity="center"
        ></GridView>

</LinearLayout>
