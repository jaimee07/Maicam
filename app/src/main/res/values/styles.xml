<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/maicam_blue</item>
        <item name="colorPrimaryDark">@color/maicam_dark_blue</item>
        <!--item name="colorButtonNormal">@color/white</item-->
    </style>

    <!--Main Activity Theme
    <item name="background">@color/maicam_blue</item>
        <item name="android:background">@color/maicam_blue</item>
    -->
    <style name="MaicamTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Maicam.NoTitle</item>

    </style>

    <style name="ActionBar.Solid.Maicam.NoTitle"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <!--item name="colorPrimary">@color/maicam_blue</item-->
    </style>

    <!-- horizontal line-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
    </style>
</resources>
